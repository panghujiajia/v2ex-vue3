{
    "tabBar": {
        "color": "#444444",
        "selectedColor": "#02B386",
        // #ifndef MP-WEIXIN
        "borderStyle": "#ffffff",
        // #endif

        // #ifdef MP-WEIXIN
        "borderStyle": "white",
        // #endif
        "backgroundColor": "#ffffff",
        "list": [
            {
                "pagePath": "pages/Index",
                "iconPath": "static/icons/top-bright.png",
                "selectedIconPath": "static/icons/top-cur.png",
                "text": "热门"
            },
            {
                "pagePath": "pages/All",
                "iconPath": "static/icons/all-bright.png",
                "selectedIconPath": "static/icons/all-cur.png",
                "text": "全部"
            },
            {
                "pagePath": "pages/My",
                "iconPath": "static/icons/user-bright.png",
                "selectedIconPath": "static/icons/user-cur.png",
                "text": "我的"
            }
        ]
    },
    "pages": [
        {
            "path": "pages/Index",
            "style": {
                "enablePullDownRefresh": true,
                // #ifdef H5
                "navigationStyle": "custom"
                // #endif H5
            }
        },
        {
            "path": "pages/All",
            "style": {
                // #ifdef H5
                "navigationStyle": "custom"
                // #endif H5
            }
        },
        {
            "path": "pages/My",
            "style": {
                // #ifdef H5
                "navigationStyle": "custom"
                // #endif H5
            }
        },
        {
            "path": "pages/Detail",
            "style": {
                "enablePullDownRefresh": true
            }
        },
        {
            "path": "pages/Tag",
            "style": {
                "enablePullDownRefresh": true
            }
        },
        {
            "path": "pages/UserTopic",
            "style": {
                "enablePullDownRefresh": true
        },
        {
            "path": "pages/UserMessage",
            "style": {
                "enablePullDownRefresh": true
            }
        },
        {
            "path": "pages/UserReply",
            "style": {
                "enablePullDownRefresh": true
            }
        },
        {
            "path": "pages/History"
        },
        {
            "path": "pages/About"
        },
        {
            "path": "pages/Login"
        }
    ],
    "globalStyle": {
        "navigationBarTextStyle": "black",
        "navigationBarTitleText": "V2EX",
        "navigationBarBackgroundColor": "#fff",
        "backgroundColor": "#FFF",
        "scrollIndicator": "none",
        "rpxCalcMaxDeviceWidth": 640,
        "rpxCalcBaseDeviceWidth": 375
    },
    "easycom": {
        "autoscan": true,
        "custom": {
            "^uv-(.*)": "@climblee/uv-ui/components/uv-$1/uv-$1.vue"
        }
    }
}
